@using BankAccounts.Models;
@model UserLogin;

<h1>Login to Your Cool Bank Account!</h1><br>

<a asp-action="Index">Need to Register?</a><br>

<form class="col-6" asp-action="Login" method="post">
    <div class="form-group">
        <span asp-validation-for="Email" class="text-danger"></span><br>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Password" class="text-danger"></span><br>
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>