@model Transaction

<form asp-action="Transact" asp-route-userID="@Model.UserId" method="post">
    <span asp-validation-for="Amount" class="text-danger"></span><br>
    <div class="form-group row">
        <label asp-for="Amount" class="col-2 col-form-label">Deposit/Withdraw:</label>
        <div class="input-group col-2 mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input asp-for="Amount" type="number" step=".01" class="form-control">
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>